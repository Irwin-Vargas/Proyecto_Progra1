@model Proyecto_Programacion1.Models.Orden

<h2>Editar Orden</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Fecha">Fecha</label>
        <input asp-for="Fecha" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Total">Total</label>
        <input asp-for="Total" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Completada">Estado</label>
        <select asp-for="Completada" class="form-control">
            <option value="false">Pendiente</option>
            <option value="true">Completada</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

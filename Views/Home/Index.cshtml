@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center text-white bg-dark py-5" style="background: url('/images/hero-burger.jpg') center/cover no-repeat;">
    <div class="container">
        <h1 class="display-4 fw-bold">¡Bienvenido a FastBite!</h1>
        <p class="lead">Disfruta de las mejores hamburguesas</p>
        <a href="/catalogo" class="btn btn-warning btn-lg mt-3">Ver Menú</a>
    </div>
</div>

<section class="features py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <img src="/images/delivery-icon.png" alt="Envío rápido" style="height: 80px;">
                <h4 class="mt-3">Envío Rápido</h4>
                <p>Tu comida caliente y deliciosa en menos de 30 minutos.</p>
            </div>
            <div class="col-md-4 mb-4">
                <img src="/images/food-icon.png" alt="Comida fresca" style="height: 80px;">
                <h4 class="mt-3">Ingredientes Frescos</h4>
                <p>Usamos solo productos frescos y de calidad superior.</p>
            </div>
            <div class="col-md-4 mb-4">
                <img src="/images/discount-icon.png" alt="Promociones" style="height: 80px;">
                <h4 class="mt-3">Ofertas Especiales</h4>
                <p>Aprovecha nuestras promociones semanales.</p>
            </div>
        </div>
    </div>
</section>

<section class="promo text-center py-5 text-white" style="background-color: #ff5722;">
    <div class="container">
        <h2 class="display-5">¿Primera vez aquí?</h2>
        <p class="lead">Regístrate y recibe un 10% de descuento en tu primera orden</p>
        <a href="/User/Registro" class="btn btn-outline-light btn-lg">Registrarse</a>
    </div>
</section>

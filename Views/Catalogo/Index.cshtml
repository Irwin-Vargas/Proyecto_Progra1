@model List<Proyecto_Programacion1.Models.Producto>

<h2>Catálogo de Productos</h2>

<div class="row">
    @foreach (var producto in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@producto.Nombre</h5>
                    <img src=" @producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre">
                    <p class="card-text">@producto.Descripcion</p>
                    <p class="card-text">@producto.Precio.ToString("C")</p>
                    <form asp-controller="Carrito" asp-action="Agregar" method="post">
                        <input type="hidden" name="id" value="@producto.Id" />
                        <button type="submit" class="btn btn-primary">Añadir al carrito</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

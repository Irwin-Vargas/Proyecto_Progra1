@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center">
            <img src="imagenes/logo.jpeg" alt="La Perucha Logo" height="60">
            <h2 class="mt-3 text-danger fw-bold">Iniciar Sesión</h2>
        </div>
        <form>
            <div class="mb-3">
                <label for="email" class="form-label fw-bold">Email</label>
                <input type="email" class="form-control" id="username" name="username" placeholder="Ingrese su email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Contraseña</label>
                <input type="password" class="form-control" id="password" name="pasword" placeholder="Ingrese su contraseña">
            </div>
            <button type="submit" class="btn w-100 text-white fw-bold" style="background-color: #d32f2f;">LOGIN</button>
        </form>
        <div class="text-center mt-3">
            <p>¿No tienes cuenta? <a href="/Registro" class="text-danger fw-bold">Regístrate</a></p>
        </div>
    </div>
</div>

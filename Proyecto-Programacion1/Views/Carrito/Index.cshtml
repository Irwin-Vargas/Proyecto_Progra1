@model List<Proyecto_Programacion1.Models.CarritoItem>

<div class="container mt-4">
    <h2 class="fw-bold text-center">MI PEDIDO</h2>

    @if (Model.Count == 0)
    {
        <p class="text-center text-muted">No hay productos en el carrito.</p>
    }
    else
    {
        <table class="table table-hover mt-3 text-center">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Producto</th>
                    <th>Precio Unitario</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>
                            <form asp-action="ActualizarCantidad" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.ProductoId" />
                                <button type="submit" name="accion" value="decrementar" class="btn btn-sm btn-light">-</button>
                                <span class="px-2">@item.Cantidad</span>
                                <button type="submit" name="accion" value="incrementar" class="btn btn-sm btn-light">+</button>
                            </form>
                        </td>
                        <td>@(item.Cantidad * item.Precio).ToString("C")</td>
                        <td>
                            <form asp-action="Eliminar" method="post">
                                <input type="hidden" name="id" value="@item.ProductoId" />
                                <button type="submit" class="btn btn-danger btn-sm">X</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center p-3 bg-light border rounded">
            <h4 class="fw-bold">TOTAL: <span class="text-danger">@Model.Sum(item => item.Cantidad * item.Precio).ToString("C")</span></h4>
            <form asp-controller="Carrito" asp-action="ConfirmarCompra" method="post">
                <button type="submit" class="btn btn-success btn-lg">COMPRAR</button>
            </form>
        </div>
    }
</div>

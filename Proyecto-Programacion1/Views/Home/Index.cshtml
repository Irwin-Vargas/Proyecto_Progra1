@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">
    <!-- Banner Principal -->
    <div class="banner-container">
        <img src="imagenes/banner.jpeg" class="img-fluid w-100" alt="La Perucha - Promoción 2x1">
    </div>

    <!-- Sección de Promociones -->
    <h2 class="text-center mt-5 fw-bold text-danger">PROMOCIONES</h2>
    <div class="row mt-4">
        <!-- Promoción 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/imagenes/burger clasica.jpg" class="card-img-top" alt="Perucha Clásica">
                <div class="card-body text-center">
                    <h5 class="fw-bold">Perucha Clásica 🍔</h5>
                    <p>La Clásica con salsa especial de la casa.</p>
                    <p class="fw-bold">OFERTA: 2x1</p>
                    <button class="btn btn-dark w-100">VER MÁS</button>
                </div>
            </div>
        </div>

        <!-- Promoción 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/imagenes/burger cebolla.jpg" class="card-img-top" alt="Perucha Criolla">
                <div class="card-body text-center">
                    <h5 class="fw-bold">Perucha Criolla 🌶️🍔</h5>
                    <p>La Criolla con su salsa criolla y toque peruano.</p>
                    <p class="fw-bold">OFERTA: S/ 15.00</p>
                    <button class="btn btn-dark w-100">VER MÁS</button>
                </div>
            </div>
        </div>

        <!-- Promoción 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/imagenes/burgue huevo.jpg" class="card-img-top" alt="Perucha Anticuchera">
                <div class="card-body text-center">
                    <h5 class="fw-bold">Perucha Anticuchera 🍢🍔</h5>
                    <p>Carne marinada con papas nativas crocantes.</p>
                    <p class="fw-bold">OFERTA: S/ 18.00</p>
                    <button class="btn btn-dark w-100">VER MÁS</button>
                </div>
            </div>
        </div>
    </div>
</div>

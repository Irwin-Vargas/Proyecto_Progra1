@model Proyecto_Programacion1.Models.Orden

<h2>Detalles de la Orden</h2>

<p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
<p><strong>Total:</strong> @Model.Total.ToString("C")</p>
<p><strong>Estado:</strong> @Model.Estado</p>

<h3>Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@(item.Cantidad * item.Precio).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
